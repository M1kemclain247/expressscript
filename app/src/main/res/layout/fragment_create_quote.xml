<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMainTitleQuote"
            android:layout_width="match_parent"
            android:layout_height="22sp"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:text="Request A Quote"
            android:paddingTop="1dp"
            android:textColor="@android:color/white"
            android:background="@drawable/side_nav_bar"
            android:textAlignment="center"/>

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/rotate_right"
            android:id="@+id/btnRotateImg"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgResultQuotation"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btnSendQuotation"
            style="@style/primaryBtn"
            android:layout_marginTop="10dp"
            android:text="Send Request"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/txtTitleQuote"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:padding ="10dp"
            android:text="Request Quotation" />

        <TextView
            android:id="@+id/txtHintQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="20dp"
            android:text="Try to include as much information as possible when taking pictures such as the Medicine Name, Quantity"
            android:textColor="@color/colorPrimaryDark"
             />

        <TextView
            android:id="@+id/txtExampleQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:text="EG : 1x  250mg of Besemax"
            android:textColor="@color/colorPrimaryDark"
            />



        <TextView
            android:id="@+id/txtHeaderQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="10dp"
            android:text="Select Option"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCreateQuoteCamera"
            style="@style/primaryBtn"
            android:layout_marginTop="10dp"
            android:text="Take a Photo" />

        <Button
            android:id="@+id/btnCreateQuoteGallery"
            style="@style/primaryBtn"
            android:layout_marginTop="10dp"
            android:text="Browse Images" />

        <Button
            android:id="@+id/btnCreateQuoteText"
            style="@style/primaryBtn"
            android:layout_marginTop="10dp"
            android:text="Create Text " />


    </LinearLayout>

</ScrollView>
